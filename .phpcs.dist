<?php
$rules = [
  '@PSR2'        => true,
  'array_syntax' => ['syntax' => 'short'],
  'braces'       => true,
];
$excludes = ['vender', 'app/webroot'];

return PhpCsFixer\Config::create()
    ->setRules($rules)
    ->setFinder(
        PhpCsFixer\Finder::create()
            ->in(__DIR__)
            ->exclude($excludes)
            ->notName('README.md')
            ->notName('*.xml')
            ->notName('*.yml')
    );

