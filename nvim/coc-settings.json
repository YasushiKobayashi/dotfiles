{
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    },
    "intelephense": {
        "command": "intelephense",
        "args": ["--stdio"],
        "filetypes": ["php"],
        "initializationOptions": {
            "storagePath": "/tmp/intelephense"
        }
    }
  }
}
